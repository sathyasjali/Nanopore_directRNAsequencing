params {
    fastq_files = "$baseDir/data/reads/*.fastq"
    reference_dir = "$baseDir/data/reference"
    out_dir = "$baseDir/results"
    params.parseScript = "${baseDir}/bin/plot-dist.py"
    script_dir = "${baseDir}/bin/readlength_histogram.py"
    error_script = "${baseDir}/bin/error_plot.py"
    mapping_script = "${baseDir}/bin/mapping_stats.py"
}

process {
    withName: 'FASTQC' {
        container = 'quay.io/biocontainers/fastqc:0.11.9--0'
    }
    withName: 'FASTQC2' {
        container = 'quay.io/biocontainers/fastqc:0.11.9--0'
    }
    withName: 'MULTIQC' {
        container = 'quay.io/biocontainers/multiqc:1.9--py_1'   
    }
    withName: 'NANOFILT' {
        container = 'community.wave.seqera.io/library/bcftools_fastqc_minimap2_samtools_pruned:07a664876843239a'
    }
    withName: 'MULTIQC2' {
        container = 'quay.io/biocontainers/multiqc:1.9--py_1' 
    }
    withName: 'MINIMAP2' {
        container = 'community.wave.seqera.io/library/bcftools_emboss_minimap2_samtools:09b81fb0810b8e21'
    }
    withName: 'SAMTOOLS' {
        container = 'community.wave.seqera.io/library/bcftools_emboss_minimap2_samtools:09b81fb0810b8e21'
    }
    withName: 'BCFTOOLS' {
        container = 'community.wave.seqera.io/library/bcftools_emboss_minimap2_samtools:09b81fb0810b8e21'
        }
    withName: 'EMBOSS' {
        container = 'community.wave.seqera.io/library/bcftools_emboss_minimap2_samtools:09b81fb0810b8e21'
        }
    withName: 'MOSDEPTH' {
        container = 'community.wave.seqera.io/library/mosdepth:0.3.10--259732f342cfce27'
    }
}

docker {
    fixOwnership = true
    enabled = true
    runOptions = '--platform linux/amd64'
}